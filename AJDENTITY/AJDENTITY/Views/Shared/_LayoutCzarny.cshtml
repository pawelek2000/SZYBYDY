<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css2")
        @Scripts.Render("~/bundles/modernizr")

    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">Dziennik</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="nav-link active" href="/Account/Register"> Utwórz konto <span class="visually-hidden">(current)</span></a></li>

                            <li><a class="nav-link active" href="/Teachers/Index"> Nauczyciele <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/Students/Index"> Uczniowie <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/Parents/Index"> Rodzice <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/Classes/Index"> Klasy <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/Subjects/Index"> Przedmioty <span class="visually-hidden">(current)</span></a></li>

                            <li><a class="nav-link active" href="/Announcements/Index"> Ogłoszenia <span class="visually-hidden">(current)</span></a></li>

                            <li><a class="nav-link active" href="/ClassSubjectTeachers/Index"> Przedmioty Nauczycieli <span class="visually-hidden">(current)</span></a></li>

                        }

                        @if (User.IsInRole("Nauczyciel"))
                        {
                            <li><a class="nav-link active" href="/MojeKlasyNauczyciel/Index"> Moje Klasy <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/MojePrzedmiotyNauczyciel/Index"> Moje Przedmioty <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/KontaktyDoRodzicow/Index"> Kontakty <span class="visually-hidden">(current)</span></a></li>

                            <li><a class="nav-link active" href="/EdytujProfilNauczyciel/Edit"> Edytuj Profil <span class="visually-hidden">(current)</span></a></li>
                        }

                        @if (User.IsInRole("Rodzic"))
                        {

                            <li><a class="nav-link active" href="/MojeDzieci/Index"> Moje Dzieci<span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/KontaktyDoNauczycieli/Index"> Kontakty <span class="visually-hidden">(current)</span></a></li>

                            <li><a class="nav-link active" href="/EdytujProfilRodzic/Index"> Edytuj Profil <span class="visually-hidden">(current)</span></a></li>

                        }

                        @if (User.IsInRole("Uczen"))
                        {
                            <li><a class="nav-link active" href="/UczenSubjects/Index"> Moje Przedmioty <span class="visually-hidden">(current)</span></a></li>
                            <li><a class="nav-link active" href="/EdytujProfilUczen/Index"> Moje Klasy <span class="visually-hidden">(current)</span></a></li>
                        }
                    </ul>

                    @Html.Partial("_LoginPartial")

                </div>
            </div>
        </nav>



        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Wirtualny Dziennik Szkolny</p>
                @Html.ActionLink("Motyw Czarny", "Czarny", "")
                @Html.ActionLink("Motyw Biały", "Bialy", "")
                @Html.ActionLink("Motyw Piekny", "Piekny", "")
            </footer>
        </div>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

</html>